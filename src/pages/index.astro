---
import Layout from '../layouts/Layout.astro';
import HeroWithLatestEpisode from '../components/HeroWithLatestEpisode.astro';
import EpisodeCard from '../components/EpisodeCard.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

// Get all episodes and sort by episode number descending (latest first)
const allEpisodes = await getCollection('episodes');
const sortedEpisodes = allEpisodes
  .sort((a: CollectionEntry<'episodes'>, b: CollectionEntry<'episodes'>) => b.data.episodeNumber - a.data.episodeNumber);
---

<Layout>
  <HeroWithLatestEpisode episode={sortedEpisodes[0].data} />

  {sortedEpisodes.length > 1 && (
    <section class="episodes-section">
      <div class="container">
        <h2>Previous Episodes</h2>
        <div class="episodes-grid">
          {sortedEpisodes.slice(1).map((episode: CollectionEntry<'episodes'>) => (
            <EpisodeCard episode={episode.data} />
          ))}
        </div>
      </div>
    </section>
  )}
</Layout>

<style>
  .episodes-section {
    background-color: #0a0e17;
    padding: 4rem 2rem;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .episodes-section h2 {
    font-family: 'Orbitron', sans-serif;
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 3rem;
    color: #e8edf5;
    text-align: left;
    letter-spacing: 0.05em;
  }

  .episodes-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .episodes-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .episodes-section {
      padding: 6rem 2rem;
    }

    .episodes-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 767px) {
    .episodes-section {
      padding: 3rem 1rem;
    }

    .episodes-section h2 {
      font-size: 2rem;
    }
  }
</style>
