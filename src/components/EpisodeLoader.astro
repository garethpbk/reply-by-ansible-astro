---
import EpisodeCard from "./EpisodeCard.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  initialEpisodes: CollectionEntry<"episodes">[];
  itemsPerLoad?: number;
}

const { initialEpisodes, itemsPerLoad = 6 } = Astro.props;
---

<div class="lazy-episodes-wrapper">
  <div class="episodes-grid" id="episodes-grid">
    {
      initialEpisodes.map((episode) => (
        <div class="episode-item">
          <EpisodeCard episode={episode.data} />
        </div>
      ))
    }
  </div>

  <div class="load-more-container" id="load-more-container">
    <button id="load-more-btn" class="load-more-btn">
      Load More Episodes
    </button>
  </div>
</div>

<script>
  let offset = 6; // We already have the first 6 rendered
  const itemsPerLoad = 6;
  const loadMoreBtn = document.getElementById("load-more-btn");
  const loadMoreContainer = document.getElementById("load-more-container");
  const episodesGrid = document.getElementById("episodes-grid");

  if (loadMoreBtn && episodesGrid && loadMoreContainer) {
    loadMoreBtn.addEventListener("click", async () => {
      loadMoreBtn.textContent = "Loading...";
      loadMoreBtn.disabled = true;

      try {
        const response = await fetch(
          `/api/episodes.json?offset=${offset}&limit=${itemsPerLoad}`
        );
        const data = await response.json();

        // Create and append new episode cards
        data.episodes.forEach((episode: any) => {
          const episodeItem = document.createElement("div");
          episodeItem.className = "episode-item";

          // Create the episode card HTML
          episodeItem.innerHTML = `
            <article class="episode-card">
              <div class="episode-image">
                <img src="${episode.image?.src || ''}" alt="${episode.title}" loading="lazy" />
              </div>
              <div class="episode-content">
                <div class="episode-header">
                  <span class="episode-number">Episode ${episode.episodeNumber}</span>
                  ${episode.duration ? `<span class="episode-duration">${episode.duration}</span>` : ''}
                </div>
                <h3>${episode.title}</h3>
                <p class="episode-description">${episode.description}</p>
                ${episode.featuredStory ? `
                  <div class="featured-story">
                    <strong>Featured Story:</strong> "${episode.featuredStory.title}" by ${episode.featuredStory.author}${episode.featuredStory.year ? ` (${episode.featuredStory.year})` : ''}
                  </div>
                ` : ''}
                <div class="episode-actions">
                  <audio controls class="episode-audio">
                    <source src="${episode.audioUrl}" type="audio/mpeg">
                    Your browser does not support the audio element.
                  </audio>
                  ${episode.storyUrl ? `<a href="${episode.storyUrl}" class="read-story-link" target="_blank" rel="noopener noreferrer">Read Story</a>` : ''}
                </div>
              </div>
            </article>
          `;

          episodesGrid.appendChild(episodeItem);
        });

        offset += itemsPerLoad;

        // Hide button if no more episodes
        if (!data.hasMore) {
          loadMoreContainer.style.display = "none";
        }

        loadMoreBtn.textContent = "Load More Episodes";
        loadMoreBtn.disabled = false;
      } catch (error) {
        console.error("Failed to load episodes:", error);
        loadMoreBtn.textContent = "Error - Try Again";
        loadMoreBtn.disabled = false;
      }
    });
  }
</script>

<style>
  .lazy-episodes-wrapper {
    width: 100%;
  }

  .episodes-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .episodes-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .episodes-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .episode-item {
    width: 100%;
  }

  .load-more-container {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }

  .load-more-btn {
    font-family: "Orbitron", sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: #0a0e17;
    background: #00d9ff;
    padding: 1rem 2.5rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
  }

  .load-more-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .load-more-btn:hover:not(:disabled) {
    background: #00c4e6;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 217, 255, 0.4);
  }

  .load-more-btn:active:not(:disabled) {
    transform: translateY(0);
  }

  @media (max-width: 767px) {
    .load-more-btn {
      font-size: 0.875rem;
      padding: 0.875rem 2rem;
    }
  }

  /* Episode card styles (duplicated from EpisodeCard.astro) */
  .episode-card {
    background: linear-gradient(135deg, #1a1f2e 0%, #0f1419 100%);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid rgba(0, 217, 255, 0.1);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .episode-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 217, 255, 0.2);
    border-color: rgba(0, 217, 255, 0.3);
  }

  .episode-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #0a0e17;
    flex-shrink: 0;
  }

  .episode-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
  }

  .episode-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex: 1;
  }

  .episode-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .episode-number {
    font-family: "Orbitron", sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: #00d9ff;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .episode-duration {
    font-size: 0.875rem;
    color: #8b92a8;
  }

  .episode-card h3 {
    font-family: "Orbitron", sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #e8edf5;
    margin: 0;
    line-height: 1.3;
  }

  .episode-description {
    color: #c4cad9;
    font-size: 0.9375rem;
    line-height: 1.6;
    margin: 0;
  }

  .featured-story {
    padding: 1rem;
    background: rgba(0, 217, 255, 0.05);
    border-left: 3px solid #00d9ff;
    border-radius: 4px;
    font-size: 0.875rem;
    color: #c4cad9;
  }

  .featured-story strong {
    color: #00d9ff;
  }

  .episode-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: auto;
  }

  .episode-audio {
    width: 100%;
    height: 40px;
  }

  .read-story-link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: rgba(0, 217, 255, 0.1);
    color: #00d9ff;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 500;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid rgba(0, 217, 255, 0.2);
  }

  .read-story-link:hover {
    background: rgba(0, 217, 255, 0.2);
    border-color: rgba(0, 217, 255, 0.4);
    transform: translateY(-2px);
  }
</style>
