---
import { Image } from "astro:assets";
import AudioPlayer from "./AudioPlayer.astro";
import bannerImage from "../assets/images/reply_by_ansible_banner_square.jpg";
import type { ImageMetadata } from "astro";

interface Props {
  episode: {
    title: string;
    episodeNumber: number;
    publishDate: Date;
    description: string;
    audioUrl: string;
    featuredStory: {
      title: string;
      author: string;
      year?: number;
    };
    duration?: string;
    image?: ImageMetadata;
  };
}

const { episode } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
};
---

<section class="hero-section">
  <div class="hero-background">
    <div class="banner-image-container">
      <Image src={bannerImage} alt="Reply By Ansible podcast" />
    </div>
  </div>

  <div class="latest-episode-container">
    <div class="latest-episode-wrapper">
      <span class="latest-badge">Latest Episode</span>
      <article
        class={`latest-episode-card ${episode.image ? "has-image" : "no-image"}`}
      >
        {
          episode.image && (
            <div class="episode-image-container">
              <div class="episode-image">
                <Image src={episode.image} alt={episode.title} />
              </div>
            </div>
          )
        }
        <div class="episode-content">
          <div class="episode-header">
            <span class="episode-number">Episode {episode.episodeNumber}</span>
            <time datetime={episode.publishDate.toISOString()}>
              {formatDate(episode.publishDate)}
            </time>
          </div>
          <h2>{episode.title}</h2>
          <p class="featured-story">
            Featuring: <em>{episode.featuredStory.title}</em> by {
              episode.featuredStory.author
            }
            {episode.featuredStory.year && `(${episode.featuredStory.year})`}
          </p>
          <p class="description">{episode.description}</p>
          <AudioPlayer
            audioUrl={episode.audioUrl}
            duration={episode.duration}
          />
        </div>
      </article>
    </div>
  </div>
</section>

<style>
  .hero-section {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .hero-background {
    height: 60vh;
    background: linear-gradient(135deg, #1a1f2e 0%, #0a0e17 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .banner-image-container {
    width: 100%;
    max-width: 50vh;
    aspect-ratio: 1 / 1;
    padding: 2rem;
  }

  .banner-image-container img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  .latest-episode-container {
    height: 40vh;
    background: linear-gradient(135deg, #1a1f2e 0%, #0a0e17 100%);
    padding: 1.5rem 2rem;
    display: flex;
    align-items: center;
    flex-shrink: 0;
    overflow: hidden;
  }

  .latest-episode-wrapper {
    max-width: 1280px;
    margin: 0 auto;
    width: 100%;
  }

  .latest-badge {
    display: inline-block;
    font-family: "Orbitron", sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: #0a0e17;
    background: #00d9ff;
    padding: 0.5rem 1.5rem;
    border-radius: 4px 4px 0 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .latest-episode-card {
    background: rgba(0, 217, 255, 0.12);
    border: 1px solid rgba(0, 217, 255, 0.3);
    border-radius: 0 12px 12px 12px;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  .latest-episode-card.has-image {
    display: flex;
    align-items: stretch;
    gap: 0;
    height: 100%;
    max-height: calc(40vh - 3rem - 2.5rem);
  }

  .latest-episode-card.no-image {
    display: block;
  }

  .episode-image-container {
    flex-shrink: 0;
    display: flex;
    align-items: center;
  }

  .episode-image {
    width: auto;
    height: 100%;
    max-height: calc(40vh - 3rem - 2.5rem);
    aspect-ratio: 1 / 1;
    flex-shrink: 0;
  }

  .episode-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .episode-content {
    padding: 1rem 1.5rem;
    min-width: 0;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .episode-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .episode-number {
    color: #00d9ff;
    font-weight: 600;
    font-size: 0.875rem;
    font-family: "Rajdhani", sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .latest-episode-card time {
    color: rgba(232, 237, 245, 0.6);
    font-size: 0.875rem;
    font-family: "Rajdhani", sans-serif;
  }

  .latest-episode-card h2 {
    font-family: "Orbitron", sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    color: #e8edf5;
    line-height: 1.2;
  }

  .featured-story {
    color: rgba(232, 237, 245, 0.8);
    font-size: 0.8125rem;
    font-family: "Rajdhani", sans-serif;
    margin-bottom: 0.25rem;
  }

  .featured-story em {
    color: #00d9ff;
    font-style: normal;
    font-weight: 500;
  }

  .description {
    color: rgba(232, 237, 245, 0.7);
    font-family: "Rajdhani", sans-serif;
    line-height: 1.4;
    margin-bottom: 0.75rem;
    font-size: 0.875rem;
  }

  @media (max-width: 1023px) {
    .banner-image-container {
      max-width: 400px;
    }

    .episode-image {
      width: 150px;
      height: 150px;
    }

    .episode-content {
      padding: 1rem 1.5rem;
    }

    .latest-episode-card h2 {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 767px) {
    .hero-section {
      height: auto;
      min-height: 100vh;
    }

    .banner-image-container {
      max-width: 300px;
      padding: 1rem;
    }

    .latest-episode-container {
      padding: 1rem;
    }

    .latest-episode-card.has-image {
      flex-direction: column;
    }

    .episode-image {
      width: 100%;
      height: auto;
      aspect-ratio: 16 / 9;
    }

    .episode-content {
      padding: 1.5rem;
    }

    .latest-episode-card h2 {
      font-size: 1.25rem;
    }
  }
</style>
